# Load libraries
library(class)
library(gmodels)

# Set working directory (optional)
# setwd("C:/Users/Admin/Downloads")

# Read the csv file
wbcd <- read.csv("C:/Users/Admin/Downloads/wisc_bc_data.csv")

# Normalize function
normalize <- function(x) {
  return ((x - min(x)) / (max(x) - min(x)))
}

# Normalize data (columns 3 to 31 are numeric features)
wbcd_n <- as.data.frame(lapply(wbcd[3:31], normalize))

# Split into training and test sets
wbcd_train <- wbcd_n[1:469, ]
wbcd_test  <- wbcd_n[470:569, ]

# Labels
wbcd_train_labels <- wbcd[1:469, 2]
wbcd_test_labels  <- wbcd[470:569, 2]

# Run KNN (k = 21)
wbcd_test_pred <- knn(wbcd_train, wbcd_test, wbcd_train_labels, k = 21)

# Print predictions
print(wbcd_test_pred)

# CrossTable for evaluation
CrossTable(x = wbcd_test_labels, y = wbcd_test_pred, prop.chisq = FALSE)
